# ============================================================================
# CORE ENVIRONMENT
# ============================================================================
# Application runtime environment
# Allowed: local | development | staging | production
ENVIRONMENT=local


# ============================================================================
# DJANGO CORE
# ============================================================================
DEBUG=true
SECRET_KEY=change-me-in-production

SERVER_NAME=localhost,127.0.0.1

# ============================================================================
# INTERNATIONALIZATION / TIME ZONE
# ============================================================================
LANGUAGE_CODE=en-us
TIME_ZONE=Asia/Dhaka
USE_I18N=true
USE_L10N=true
USE_TZ=true



# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Allowed: sqlite | postgresql | mysql | oracle | mssql
DATABASE_TYPE=sqlite

# Used for PostgreSQL / MySQL / etc.
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=postgres
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres


# ============================================================================
# DJANGO REST FRAMEWORK
# ============================================================================
# Pagination
PAGE_SIZE=100

# Throttling (examples)
THROTTLE_ANON=1000/hour
THROTTLE_USER=1000/hour
THROTTLE_AUTH=20/hour
THROTTLE_WRITE=30/minute


# ============================================================================
# SECURITY
# ============================================================================
# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS (if enabled)
CORS_ALLOW_ALL_ORIGINS=false
CORS_ALLOWED_ORIGINS=http://localhost:3000


# ============================================================================
# REDIS
# ============================================================================
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_DB=1
REDIS_DB_BROKER=2
REDIS_DB_BACKEND=3
REDIS_PASSWORD=""
CACHES_TIMEOUT="3600"


# ============================================================================
# EMAIL
# ============================================================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=example@gmail.com
EMAIL_HOST_PASSWORD=change-me

